{
  "name": "dealcross-backend",
  "version": "1.0.0",
  "description": "Dealcross Escrow Platform Backend API with Universal KYC Verification",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js",
    "clean:uploads": "rm -rf uploads/*",
    "health": "node scripts/health-check.js"
  },
  "keywords": ["escrow", "payment", "kyc", "verification", "api", "universal"],
  "author": "Dealcross Team",
  "license": "MIT",
  "dependencies": {
    // Core
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1",
    
    // Authentication & Security
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "compression": "^1.7.4",
    "crypto": "^1.0.1", // ✅ ADDED: For webhook signatures
    
    // Validation
    "express-validator": "^7.0.1",
    "joi": "^17.11.0", // ✅ ADDED: For schema validation
    
    // File Uploads & Storage
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.2", // ✅ ADDED: For image processing
    "mime-types": "^2.1.35", // ✅ ADDED: File type detection
    
    // External APIs
    "axios": "^1.7.7", // Remove node-fetch, use axios only
    "google-auth-library": "^9.0.0",
    
    // KYC Specific
    "crypto-js": "^4.1.1", // ✅ ADDED: For encryption
    
    // Email & Communication
    "nodemailer": "^6.9.7",
    "resend": "^1.1.0",
    
    // 2FA & Security
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    
    // Scheduling
    "node-cron": "^3.0.3",
    
    // Logging
    "winston": "^3.11.0", // ✅ ADDED: Structured logging
    "morgan": "^1.10.0",
    
    // Utilities
    "moment": "^2.29.4", // ✅ ADDED: Date handling
    "uuid": "^9.0.1", // ✅ ADDED: Unique IDs
    "lodash": "^4.17.21" // ✅ ADDED: Utility functions
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0", // ✅ ADDED: Testing
    "supertest": "^6.3.3", // ✅ ADDED: HTTP testing
    "eslint": "^8.57.0", // ✅ ADDED: Linting
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/uploads/"
    ]
  }
}